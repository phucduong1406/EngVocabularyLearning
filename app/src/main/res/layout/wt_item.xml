<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="351dp"
        android:layout_height="422dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="#edf0f4"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnVolWT"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/iconRight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/volumn_circle" />

            <ImageView
                android:id="@+id/imgWT"
                android:layout_width="252dp"
                android:layout_height="189dp"
                android:layout_below="@+id/btnVolWT"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"

                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/txtNameWT"
                    android:layout_width="259dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="55dp"

                    android:ems="10"
                    android:hint="nhập từ bạn vừa nghe"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/btnCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_arrow_next" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>